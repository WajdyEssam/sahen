<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

     <LinearLayout
        android:id="@+id/linearlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:id="@+id/a1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="#53933f"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/a1"
                android:gravity="center_horizontal"
                android:text="Gross sal"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/a3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/a2"
                android:background="#FF9A39"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="16sp" />

            <TextView
                android:id="@+id/a4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/a3"
                android:gravity="center_horizontal"
                android:text="Net sal"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.malaz.app.HorizontalListView
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="#ddd" />
    </LinearLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow style="@style/HeaderRow" >

            <TextView
                style="@style/HeaderText"
                android:text="المبلغ" >
            </TextView>

            <TextView
                style="@style/HeaderText"
                android:layout_weight="1"
                android:text="العملية" >
            </TextView>

            <TextView
                style="@style/HeaderText"
                android:text="التاريخ" >
            </TextView>
        </TableRow>
        
         <TableRow style="@style/BodyRow">
            <TextView android:text="Cell 1,1"
                android:layout_height="0dp"
                style="@style/BodyText" />
            <TextView android:text="Cell 1,2"
                android:layout_height="0dp"
                style="@style/BodyText"
                android:layout_weight="1" />
            <TextView android:text="Cell 1,3"
                android:layout_height="0dp"
                style="@style/BodyText" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp" >

        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </TableLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weekly" />

        <Button
            android:id="@+id/button2"            
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly" />

        <Button
            android:id="@+id/button3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yearly" />
    </LinearLayout>

</LinearLayout>